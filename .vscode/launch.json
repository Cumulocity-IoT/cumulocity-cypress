{
  // More information https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Screenshot",
      "program": "${workspaceFolder}/src/screenshot/startup.ts",
      "args": ["--config", "/Users/twi/Projects/cumulocity-screenshots/c8yscreenshot.config.yml"],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    },
    {
      "name": "Cypress Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/app",
      "sourceMaps": true,
      "skipFiles": ["cypress_runner.js"],
      "urlFilter": "http://localhost*"
    }
  ]
}
