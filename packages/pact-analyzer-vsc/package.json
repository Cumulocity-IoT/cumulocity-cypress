{
  "name": "c8y-pact-analyzer",
  "displayName": "C8yPact Analyzer",
  "description": "A C8yPact file viewer for VS Code",
  "version": "0.1.5",
  "publisher": "Cumulocity",
  "author": "thomas.winkler@cumulocity.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Cumulocity-IoT/cumulocity-cypress/issues"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "c8yPactAnalyzer.analyze",
        "title": "C8yPact: Analyze File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .json",
          "command": "c8yPactAnalyzer.analyze",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run build",
    "watch": "concurrently \"npm run build:extension -- --watch\" \"npm run build:webview -- --watch\"",
    "package": "npm run build:extension -- --minify && npm run build:webview -- --minify",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:webview": "esbuild ./media/script.ts --bundle --outfile=out/webview.js --format=iife --platform=browser --sourcemap",
    "build:vsix": "npm run package && npx @vscode/vsce package",
    "clean": "rm -rf out",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cumulocity-IoT/cumulocity-cypress.git"
  }
}
