    "baseUrl": ".",
    "rootDir": ".",
    "strictNullChecks": false,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "types": ["cypress"],
    "declaration": true,
    "strict": true,
    "module": "Node16",
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "cumulocity-cypress/*": ["./../src/*"]
