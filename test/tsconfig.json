{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "strictNullChecks": false,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "declaration": true,
    "strict": true,
    "module": "Node16",
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@shared/*": ["./../shared/*"],
      "@lib/*": ["./../lib/*"]
    },
  },
  "files": [],
  "include": [
    "**/*.ts",
    "../node_modules/cypress"
  ],
  "references": [{ "path": "./../shared" }, { "path": "./../lib" }]
}
