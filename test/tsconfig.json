{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "strictNullChecks": true,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "types": ["cypress"],
    "strict": true,
    "module": "Node16",
    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "paths": {
      "cumulocity-cypress/*": ["./../src/*"],
      "cumulocity-cypress": ["./../src"]
    }
  },
  "references": [
    { "path": "./../src" }
  ]
}
